# Template for secrets - DO NOT commit actual secrets!
# Copy this file, replace placeholder values, and apply with:
# kubectl apply -f secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: adaptive-lora-secrets
  namespace: ml-inference
type: Opaque
stringData:
  # HuggingFace token for model downloads
  hf-token: "YOUR_HUGGINGFACE_TOKEN_HERE"
  
  # Weights & Biases API key
  wandb-api-key: "YOUR_WANDB_API_KEY_HERE"
  
  # OpenAI API key for LLM-as-judge
  openai-api-key: "YOUR_OPENAI_API_KEY_HERE"
  
  # Anthropic API key for LLM-as-judge
  anthropic-api-key: "YOUR_ANTHROPIC_API_KEY_HERE"
  
  # JWT secret for authentication
  jwt-secret: "YOUR_JWT_SECRET_KEY_HERE"

---
apiVersion: v1
kind: Secret
metadata:
  name: redis-credentials
  namespace: ml-inference
type: Opaque
stringData:
  url: "redis://redis-service:6379"
  password: "YOUR_REDIS_PASSWORD_HERE"

---
apiVersion: v1
kind: Secret
metadata:
  name: huggingface-credentials
  namespace: ml-inference
type: Opaque
stringData:
  token: "YOUR_HUGGINGFACE_TOKEN_HERE"
